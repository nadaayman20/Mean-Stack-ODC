<section class="my-5 container">
    <form method="post">
         <div class="mb-3">
            <input class="form-control" name="id" placeholder="id" value="{{result.id}}" disabled>
        </div>
        <div class="mb-3">
            <input class="form-control" name="name" placeholder="name" value="{{result.name}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="author" placeholder="author" value="{{result.author}}">
        </div>
         <div class="mb-3">
            <input class="form-control" name="num" placeholder="Number of Pages" value="{{result.num}}">
        </div>
      
        <div class="mb-3">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>
