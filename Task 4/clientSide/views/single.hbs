{{>header}}
{{>navbar}}
<section class="my-5 container">
    {{#unless result}}
    <div class="alert alert-danger">
        Invali book id
    </div>
    {{else}}
    <div class="row">
        <div class="col-6">
            Id: {{result.id}}
        </div>
        <div class="col-6">
            Name: {{result.name}}
        </div>
        <div class="col-4">
            Author: {{result.author}}
        </div>
        <div class="col-4">
            Section: {{result.section}}
        </div>
        <div class="col-4">
            Number of Pages: {{result.num}}
        </div>
    </div>
    {{/unless}}
</section>
{{>footer}}